<main class="contenedor">
    <form action="/vacantes/new" method="POST" class="default-form">
        <h3>Información general</h3>
        <div class="campo">
            <label>Título</label>
            <input type="text" name="title" placeholder="Ej. React Developer" required>
        </div>
        <div class="campo">
            <label>Empresa</label>
            <input type="text" name="enterprise" placeholder="Ej. Empresa SA" required>
        </div>
        <div class="campo">
            <label>Ubicación</label>
            <input type="text" name="ubication" placeholder="Ej. Mendoza" required>
        </div>
        <div class="campo">
            <label>Salario(USD)</label>
            <input type="text" name="ubication" placeholder="Ej. $900 USD" required>
        </div>
        <div class="campo">
            <label>Contrato</label>
            <select name="contract">
                <option disabled selected>--- Seleccione ---</option>
                <option value="freelance">Freelance</option>
                <option value="tiempoCompleto">Tiempo completo</option>
                <option value="medioTiempo">Medio tiempo</option>
                <option value="porProyecto">Por proyecto</option>
            </select>
        </div>
        <h3>Descripción del puesto</h3>
        <div class="campo descripcion">
            <label>Descripción</label>
            <input type="hidden" id="x" name="description">
            <trix-editor input="x"></trix-editor>
        </div>
        <h3>Conocimientos</h3>
        <ul class="lista-conocimientos">
            {{#selectedSkills a}}
            {{/selectedSkills}}
        </ul>
        <div class="campo centrar-horizontal">
            <input type="submit" value="Publicar" class="btn btn-azul">
        </div>
    </form>
</main>