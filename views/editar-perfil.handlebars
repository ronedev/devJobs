<main class="contenedor">
    <form action="/edit-profile" method="POST" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label>Nombre</label>
            <input type="text" placeholder="Tu nombre" name="name" value="{{user.name}}" >
        </div>
        <div class="campo">
            <label>Email</label>
            <input type="email" placeholder="Tu email" name="email" value="{{user.email}}" >
        </div>
        <div class="campo">
            <label>Password</label>
            <input type="password" placeholder="Tu contraseÃ±a" name="password">
        </div>
        <div class="campo">
            <label>Imagen de perfil:</label>
            <input type="file" name="image" placeholder="Inserte su imagen de perfil">
            <img src="uploads/profiles/{{user.image}}" alt="actual profile image" class="admin-perfil"/>
        </div>
        <div class="campo">
            <input type="submit" value="Guardar cambios" class="btn btn-azul">
        </div>
    </form>
</main>