<main class="lista-vacantes">
    <h2>Navegaci√≥n</h2>
    <div class="botones separador">
        <a href="/edit-profile" class="btn btn-azul">Editar Perfil</a>
        <a href="/vacantes/new" class="btn btn-azul">Agregar vacante</a>
    </div>
    <h2>Tus vacantes</h2>
    <div class="panel-administracion">
        {{#if vacancies.length}}
            {{#each vacancies}}
                <div class="vacante">
                    <div class="caja">
                        <h3>{{enterprise}}</h3>
                       <p class="puesto">{{title}}</p>
                       <p class="candidatos">{{candidates.length}} Candidato(s)</p>
                    </div>
                    <div class="centrar-vertical caja">
                        <a href="/candidates/{{_id}}" class="btn btn-amarillo">Candidatos</a>
                    </div>
                    <div class="centrar-vertical caja">
                        <a href="/vacantes/edit/{{url}}" class="btn btn-verde">Editar</a>
                    </div>
                    <div class="centrar-vertical caja">
                        <a href="#" data-delete={{_id}} class="btn btn-rojo">Eliminar</a>
                    </div>
                </div>
            {{/each}}
        {{else}}
            <p>Aun no ha creado sus vacantes</p>
        {{/if}}
    </div>
</main>