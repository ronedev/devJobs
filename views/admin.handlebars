<main class="lista-vacantes">
    <h2>Navegaci√≥n</h2>
    <div class="botones separador">
        <a href="/edit-profile" class="btn btn-azul">Editar Perfil</a>
        <a href="/vacantes/new" class="btn btn-azul">Agregar vacante</a>
    </div>

    <h2>Tus vacantes</h2>
        {{#if vacancies.length}}
            {{#each vacancies}}
                <div class="vacante panel-administracion">
                    <div class="caja">
                        <h3>{{enterprise}}</h3>
                        <p class="puesto">{{title}}</p>
                    </div>
                    <div class="centrar-vertical caja">
                        <a href="/candidates/{{id}}" class="btn btn-amarillo">Candidatos</a>
                    </div>
                    <div class="centrar-vertical caja">
                        <a href="/vacantes/edit/{{url}}" class="btn btn-verde">Editar</a>
                    </div>
                    <div class="centrar-vertical caja">
                        <a href="#" data-delete="{{id}}" class="btn btn-rojo">Eliminar</a>
                    </div>
                </div>
            {{/each}}
        {{else}}
            <p>Aun no ha creado sus vacantes</p>
        {{/if}}
</main>